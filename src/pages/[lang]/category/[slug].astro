---
// src/pages/[lang]/category/[slug].astro
import BaseLayout from "../../../layouts/BaseLayout.astro";
import DealCard from "../../../components/DealCard.astro";
import { categories } from "../../../data/categories.js";
import { getDealsByCategory } from "../../../data/deals.js";
import { ui, languages } from "../../../i18n/ui";

export const prerender = true;

interface PathProps {
  params: { lang: string; slug: string };
  props: { category: any; deals: any[]; t: any };
}

export async function getStaticPaths() {
  const paths: PathProps[] = [];
  const locales = Object.keys(languages);

  locales.forEach((lang) => {
    categories.forEach((category) => {
      const categoryDeals = getDealsByCategory(category.id);
      paths.push({
        params: { lang, slug: category.slug },
        props: { 
          category,
          deals: categoryDeals,
          t: ui[lang as keyof typeof ui] || ui.en 
        },
      });
    });
  });
  return paths;
}

const { lang } = Astro.params;
const { category, deals, t } = Astro.props;
const categoryDetail = category.translations[lang as string] || category.translations.en;
---

<BaseLayout title={categoryDetail.title} t={t}>
  
  <section class="relative bg-gradient-to-br from-primary via-[#168564] to-primary-dark text-white pt-24 pb-12 md:py-32 flex items-center">
    <div class="w-full max-w-7xl mx-auto px-4 text-center relative z-10">
      <h1 class="font-poppins !text-white font-extrabold text-4xl md:text-6xl mb-6 leading-tight">
        {categoryDetail.title}
      </h1>
      <p class="font-inter text-lg md:text-xl max-w-2xl mx-auto text-white/90">
        {categoryDetail.description}
      </p>
    </div>
  </section>

  <main class="max-w-[80%] mx-auto px-4 py-16">
    
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-primary font-poppins inline-block relative pb-4">
        {lang === 'fr' ? 'Offres disponibles' : 'Available Deals'}
        <span class="text-gray-400 text-lg ml-2">({deals.length})</span>
        <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-12 h-1 bg-primary rounded-full"></span>
      </h2>
    </div>

    {deals.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {deals.map(deal => (
          <DealCard deal={deal} t={t} />
        ))}
      </div>
    ) : (
      <div class="py-20 text-center border-2 border-dashed border-gray-200 rounded-[2.5rem] bg-gray-50">
        <div class="text-6xl mb-4">ðŸ“¦</div>
        <h3 class="text-xl font-bold text-gray-700 mb-2">
          {lang === 'fr' ? 'Aucune offre pour le moment' : 'No deals yet'}
        </h3>
        <p class="text-gray-500">
          {lang === 'fr' ? 'Revenez bientÃ´t pour de nouvelles pÃ©pites !' : 'Check back soon for new gems!'}
        </p>
      </div>
    )}
  </main>
</BaseLayout>
---
// src/components/DealCard.astro
import ProductSlider from "./ProductSlider.astro";
import Timer from "./Timer.jsx";
import { getAffiliateLink } from '../data/deals.js'; 

const { deal, t, source = 'homepage' } = Astro.props;
const affiliateLink = getAffiliateLink(deal, source);
---

<div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 flex flex-col h-full overflow-hidden border border-gray-100 group">
  
  <div class="relative w-full aspect-square">
    <ProductSlider images={deal.images} productTitle={deal.title} />
    <div class="absolute top-2 left-2 z-10 bg-red-600 text-white text-[10px] font-bold px-1.5 py-0.5 rounded shadow-sm">
      -{deal.discount}%
    </div>
  </div>

  <div class="p-4 flex flex-col flex-grow">
    
    <div class="flex justify-between items-center text-[10px] font-bold uppercase tracking-wider mb-1">
      <span class="text-orange-600">{deal.statut}</span>
      <span class="text-gray-400 font-semibold"><Timer expiresAt={deal.expiresAt} client:load /></span>
    </div>

    <div class="flex flex-col">
      <h3 class="text-gray-800 font-bold text-sm leading-snug line-clamp-2">
        {deal.title}
      </h3>
      
      <div class="flex items-center gap-2 mt-1">
        <span class="text-emerald-600 text-xl font-black">${deal.price.toFixed(2)}</span>
        <span class="text-gray-400 line-through text-xs">${deal.oldPrice.toFixed(2)}</span>
      </div>
    </div>

    <div class="mt-auto pt-4">
      <a 
        href={affiliateLink} 
        target="_blank" 
        class="block w-full text-center bg-emerald-600 text-white font-bold py-2 rounded-lg hover:bg-emerald-700 transition-colors text-sm"
      >
        {t.cta?.viewDeal || "View Deal"}
      </a>
      <p class="text-[9px] text-gray-400 text-center mt-2 italic">
        Free shipping on {deal.platform}
      </p>
    </div>
  </div>
</div>
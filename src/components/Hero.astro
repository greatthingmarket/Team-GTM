---
// src/components/Hero.astro
const { t } = Astro.props;
---

<section class="relative bg-gradient-to-br from-primary via-[#168564] to-primary-dark text-white pt-12 pb-10 md:py-32 min-h-0 md:min-h-[550px] flex items-center overflow-visible">
  
  <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
    
    <h1 class="hero-title font-poppins !text-white font-extrabold text-3xl md:text-5xl lg:text-5xl tracking-tight mb-6 md:mb-10 leading-[1.4] max-w-[1150px] mx-auto py-2 overflow-visible">
      {t.hero.title} 
      <span class="text-[#FFD700] inline-block">{t.hero.titleAccent}</span>
    </h1>
    
    <p class="hero-subtitle font-inter text-lg md:text-xl lg:text-2xl max-w-3xl mx-auto mb-10 md:mb-14 text-white/95 leading-relaxed">
      {t.hero.subtitle}
    </p>
    
    <div class="flex justify-center pb-2">
      <a 
        href="#deals-of-day" 
        class="hero-cta inline-flex items-center justify-center px-10 py-4 bg-white text-primary rounded-full font-bold text-lg hover:bg-gray-50 hover:scale-105 transition-all duration-300 shadow-2xl"
      >
        {t.hero.cta}
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7" />
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* IMPORTANT : On force l'affichage complet du titre. 
    Certaines règles globales (global.css) peuvent limiter la hauteur des h1.
  */
  .hero-title {
    height: auto !important;
    max-height: none !important;
    overflow: visible !important;
    display: block !important;
  }

  /* Animation fluide pour le scroll gérée par le layout */
</style>